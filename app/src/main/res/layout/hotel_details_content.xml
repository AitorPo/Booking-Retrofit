<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:showIn="@layout/hotel_item_details"
    >

    <LinearLayout
        android:id="@+id/detail_hotel_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:focusable="true"
            card_view:ignore="ExtraText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_rating_and_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumReservas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nº de reservas: "
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/tvNumHabitaciones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nº de habitaciones: "
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/tvPuntos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Puntos:"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rating_and_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_below="@id/ll_rating_and_date">

                <TextView
                    android:id="@+id/tvReservasCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Reservas count"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tvNumHabitacionsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones count"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tvPuntuacionCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Puntuacion count"
                    android:textSize="10sp"
                    />



            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:focusable="true"
            card_view:ignore="ExtraText">
     <RelativeLayout
         android:id="@+id/rl_descripcion"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="10dp">

         <TextView
             android:id="@+id/tvDescripcionNombre"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:text="Descripción: "
             />
         <TextView
             android:id="@+id/tvDescripcion"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/tvDescripcionNombre"
             android:text="Descripción"

             android:textSize="16sp"
             />


     </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:focusable="true"
            card_view:ignore="ExtraText">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/ll_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDireccionNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Ubicación: "
                        />

                    <TextView
                        android:id="@+id/tvDireccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tvDireccionNombre"
                        android:text="Nombre de la calle"
                        />
                </LinearLayout>
                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="7dp"
                    android:layout_below="@id/ll_direccion"
                    android:apiKey="@string/google_maps_key"
                    app:cameraZoom="13"
                    app:liteMode="true"
                    app:mapType="normal"
                    app:uiZoomControls="true" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:focusable="true"
            card_view:ignore="ExtraText">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                >
                <Button
                    android:id="@+id/btnHabitaciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="verTodasHabitaciones"
                    android:clickable="true"
                    android:text="Ver todas las habitaciones"

                  />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>